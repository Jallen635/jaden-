#include <stdio.h>
#define AIR_DENSITY 1.225  // kg/m³ (at sea level)
#define BETZ_LIMIT 0.5     // Maximum theoretical efficiency (Betz limit)
int main(void)
{
    float panel_area;        // in square meters
    float solar_power;       // output power (in watts)
    float solar_irradiance;  // input power per unit area (W/m²)
    float panel_efficiency;  // in percent
    float wind_speed;
    float blade_area;
    float turbine_power;
    float turbine_efficiency;
    double electrical_power_output;
    {
        printf("--- Solar System Input ---\n");
    printf("Enter Panel Surface Area (m^2): ");
    scanf("%f", &panel_area);
    printf("Enter Solar Panel Output Power (W): ");
    scanf("%f", &solar_power);
    printf("Enter Solar Irradiance (W/m^2): ");
    scanf("%f", &solar_irradiance);
    // Efficiency = (Output Power / (Irradiance * Area)) * 100
    panel_efficiency = (solar_power / (solar_irradiance * panel_area)) * 100.0;
    printf("Solar Panel Efficiency is: %.2f%%\n", panel_efficiency);
    } 
    {
        // Input values
    printf("\n--- Wind Turbine Inputs ---");
    printf("\nEnter the electrical power output (in watts): ");
    scanf("%lf", &electrical_power_output);

    printf("Enter the swept area of the turbine blades (in square meters): ");
    scanf("%lf", &blade_area);

    printf("Enter the wind speed (in meters per second): ");
    scanf("%lf", &wind_speed);

    // Calculate the available wind power (theoretical power from the wind)
    double available_wind_power = BETZ_LIMIT * AIR_DENSITY * blade_area * wind_speed * wind_speed * wind_speed / 2;

    // Calculate the efficiency of the wind turbine
    turbine_efficiency = (electrical_power_output / available_wind_power) * 100;

    // Output the result
    printf("The energy conversion efficiency of the wind turbine is: %.2f%%\n", turbine_efficiency);

    return 0;
        
    }
}

